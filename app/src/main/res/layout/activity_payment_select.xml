<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSelectActivity">

    <ImageView
        android:id="@+id/imageViewPaymentSelect"
        android:layout_width="608dp"
        android:layout_height="295dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img1" />

    <TextView
        android:id="@+id/tv_selectPayment1"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_selectPayment1"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPaymentSelect" />

    <TextView
        android:id="@+id/tv_selectPayment3"
        android:layout_width="124dp"
        android:layout_height="54dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/tv_selectPayment3"
        android:textSize="28sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_selectPayment2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_selectPayment2"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:text="@string/tv_selectPayment2"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_selectPayment1"
        app:layout_constraintStart_toEndOf="@+id/tv_selectPayment1" />

    <Button
        android:id="@+id/btn_selectPayment1"
        android:layout_width="283dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:onClick="payByCoins"
        android:text="@string/btn_selectPayment1"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:backgroundTint="@color/btn_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectPayment2" />

    <Button
        android:id="@+id/btn_selectPayment2"
        android:layout_width="283dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:onClick="payByCard"
        android:text="@string/btn_selectPayment2"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_selectPayment1" />


</androidx.constraintlayout.widget.ConstraintLayout>